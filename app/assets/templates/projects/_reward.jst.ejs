<style>
  #modal {
    display: none;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 100;
  }

  #modal.is-active {
    display: block;
  }

  #modal:before {
    content: "";
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
  }

  #modal > article {
    position: absolute;
    top: 100px;
    left: 50%;
    width: 400px;
    margin-bottom: 100px;
    margin-left: -250px;
    min-height: 200px;
    padding: 50px;
    background: white;
    border-radius: 5px;
  }

  #modal .hide-modal {
    position: absolute;
    top: 0;
    right: 15px;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    color: gray;
  }

  #modal .hide-modal:hover {
    color: black;
  }
</style>

  </style>
<section id='modal' class='is-active'>
  <form id='add-reward'>
    <lable for='amount'>Support Amount</lable>
    <input type='text' name='reward[support_amount]'>
    <lable for='reward'>Supporter Reward</lable>
    <textarea name='reward[supporter_reward]'></textarea>
    <button id='hide-modal' class='btn btn-primary'>Add This Reward Level</button>
  </form>
</section>

<script>
  $(".show-modal").on("click", function(event){
    event.preventDefault();
    $("#modal").addClass("is-active");
  });

  $(".hide-modal").on("click", function(event){
    event.preventDefault();
    $("#modal").removeClass("is-active");
  });

  $("#modal").on("click", function(event){
    if(event.target.id == this.id){
      event.preventDefault();
      $("#modal").removeClass("is-active");
    }
  });
</script>