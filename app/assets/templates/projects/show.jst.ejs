<div class='hero-unit'>
<h1><%= project.escape('name') %></h1>
<h2>Created By: <a href='/#/users/<%= project.escape('owner_id') %>'>
    <%= project.escape('owner_name') %></a></h2>
<lable for='project'>Project Details</lable>
<ul class='project'>
  <li>Description: <%= project.escape('description') %></li>
  <li>Goal: <%= project.escape('goal') %></li>
  <li>Current Funding: <%= project.escape('current_funding') %></li>
  <li>Number of supporters: <%= project.escape('num_supporters') %></li>
  <li>Ending Time: <%= project.escape('end_time') %></li>
  <li>Rewards:<br><ul>
    <% rewards.each(function(reward) { %>
      <li><div><%= reward.escape('supporter_reward') %>
	  <button class='add-support' id='<%= reward.id %>'>
	    Support for <%= reward.escape('support_amount') %></button>
	  </div></li>
    <% }); %>
  </ul
</ul>
